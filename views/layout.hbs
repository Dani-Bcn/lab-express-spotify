        <style>
            *{
                margin: 0;
                padding: 0;  
                font-family: 'Josefin Sans', sans-serif;   
                text-decoration: none;
            }
            body{
                display: grid;
                grid-template-columns: repeat(3,1fr);
                grid-template-rows: repeat(1,1fr);
                margin: 0 auto 0 auto;
                background-image: url("/public/images/spotifyBackground.jpeg");
                background-color: rgb(20, 20, 20);
            }
            nav{
                position: fixed;
                display: grid;
                width: 100%;
                grid-template-columns: repeat(3,1fr);
                place-content: center;
                justify-items: center;
                text-align: center;
                align-items: center;
                z-index: 1;
            }
            header{
                grid-column: 1/4;
                grid-row: 1;
                text-align: center;
                place-content: center;
                width: 100%;
                height: 100px;
                font-size: 40px;
                font-family: Arial, Helvetica, sans-serif;
            }     
            span{
                grid-column: 1;
                grid-row: 1;
                padding: 25px;
                font-size: 20px;
            }
            .indexSecction{
                display: flex;
                margin-top: 100px;
                flex-direction: column;
                align-items: center;
                place-content: center;
                height: 400px;
                height: 300px;
                grid-column: 2;
                border-radius: 5px;
                background-color: aliceblue;
            }
            .artistSecction{
                display: flex;
                margin-top: 20px;
                flex-direction: column;
                align-items: center;
                place-content: center;
                height: 400px;
                รง
                height: 450px;
                grid-column: 2;
                border-radius: 5px;
                background-color: aliceblue;         
                animation: anim 2s;
            }
            @keyframes anim{
                0% { margin-top: -750px;transform: rotate3d(1, 1, 5, 45deg); }
                10% { margin-top: -750px;transform: rotate3d(1, 1, 5, 180deg); }
                100% {margin-top: 20px; transform: rotate3d(0, 0,0, 0deg);}
            }
            h1{
                margin-left: auto;
                margin-right: auto;
                padding: 10px;
                grid-column: 2/3;
                color: rgb(214, 178, 178);
            }
            .artistH1{
                margin:-15px auto 10px auto
            }
            form{
                display: grid;
                width: 50%;
                place-content: center;
                margin:  0 auto;
            }
            .indexInput{
                margin: 50px;
                padding: 10px;
                text-align: center;
            }
            .indexButton{
                width: 100px;
                margin: auto;
                padding: 10px;
                border-radius: 10px;
            }
            .artistButton{
                margin: 20px;
                width: 200px;
                height: 50px;
                display: grid;
                place-content: center;
            }
            img{
                margin: 0 auto 0 auto;
                filter: blur(1px);
                animation: imgMove 2s;
                transition: 0.5s;
            }
            img:hover{
                filter: blur(0px);
                transition: 0.5s;
            }
            @keyframes imgMove{
                0% { margin-top: -50px;transform: rotate3d(1, 1, 5, 50deg); }
                50% { margin-top: 50px;transform: rotate3d(1, 100, 5, 0deg); }
                100% {margin-top: 20px; transform: rotate3d(0, 0,0, 0deg);}
            }
            .artistImg{
                width: 250px;
                height: 250px;
                box-shadow: 0 0 10px black;
                filter: blur(0px);
            }
            div{
                width: 300px;
                display: grid;
                margin: 30px auto 0 auto ;
                background-color: rgb(255, 242, 217);
                transition: 0.5s;
                opacity: 0.7;
                font-size: 16px;
                place-content: center;
                align-items: center;
                text-align: center;
            }
            div:hover{
                transition: 0.5s;
                opacity: 1;
            }
            h4{
                font-size: 16px;
                margin: 0 0 0 50px;
            }
            h5{
                padding: 20px;
                font-size: 16px;
                margin: auto;
                align-items: center;
                text-align: center;
            }
            button{
                width: 50%;
                height: 50%;
                padding: 20px ;
                margin: 10px 0 0 0 ;
                border: none;
                cursor: pointer;
                background-color: rgba(255, 0, 0, 0);
                font-size: 20px;
            }
            audio{
                display: grid;
                align-items: center;
                justify-content: center;
                grid-column: 3;
            }
            .divAudio{
                display: grid;
                margin: 1px;
                grid-template-columns: repeat(3,1fr);
                width: 100%;
                height: 100px;
                grid-column: 1/4;          
                font-size: 20px;
                align-items: center;
            }            
        </style>  
    </html> 

